# 环境变量配置示例
# 复制此文件为 .env 并根据实际环境修改配置

# 应用程序基础配置
APP_NAME="GlobalPic AI"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT="development"

# 数据库配置（用于开发测试）
DATABASE_URL="sqlite:///./globalpic.db"
POSTGRES_DB=""
POSTGRES_USER=""
POSTGRES_PASSWORD=""

# Redis配置（开发测试可不配置）
REDIS_URL=""

# 安全配置
SECRET_KEY="your-secret-key-change-in-production-12345"
JWT_SECRET_KEY="your-jwt-secret-key-change-in-production-12345"
JWT_ALGORITHM="HS256"
JWT_EXPIRE_MINUTES=30

# AI模型配置（后续配置）
ZIMAGE_MODEL_PATH="ai/models/zimage_turbo"
SAM_MODEL_PATH="ai/models/sam/sam_vit_h_4b8939.pth"
OPENAI_API_KEY=""

# 存储配置（开发阶段可不配置）
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"
S3_ENDPOINT_URL=""

# 邮件配置（开发阶段可不配置）
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""

# 开发配置
HOT_RELOAD=true
AUTO_RELOAD=true
DEV_MODE=true