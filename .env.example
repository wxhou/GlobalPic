# GlobalPic AI 环境变量配置
# 复制此文件为 .env 并填写实际值

# ==================== 应用程序配置 ====================
APP_NAME=GlobalPic AI
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# ==================== API 配置 ====================
API_V1_STR=/api/v1

# ==================== 数据库配置 ====================
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/globalpic
MYSQL_DB=globalpic
MYSQL_USER=globalpic
MYSQL_PASSWORD=your_secure_password
DATABASE_TEST_URL=mysql+pymysql://globalpic:password@localhost:3306/globalpic_test

# ==================== Redis 配置 ====================
REDIS_URL=redis://:your_redis_password@localhost:6379/0
REDIS_PASSWORD=

# ==================== 安全配置 ====================
# ⚠️ 重要：生产环境必须修改以下密钥
SECRET_KEY=your-very-long-random-secret-key-at-least-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# ==================== AI 模型配置 (ModelScope API) ====================
# ⚠️ 重要：需要从 https://modelscope.cn 获取 API Token
MODELSCOPE_API_KEY=your-modelscope-api-token
MODELSCOPE_MODEL_ID=Tongyi-MAI/Z-Image-Turbo

# 本地模型路径 - 不再需要，保留兼容性
ZIMAGE_MODEL_PATH=
SAM_MODEL_PATH=

# OpenAI API (文案生成备用)
OPENAI_API_KEY=sk-your-openai-api-key

# ==================== 存储配置 (AWS S3) ====================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=globalpic-storage
AWS_REGION=us-east-1
S3_ENDPOINT_URL=

# ==================== 邮件配置 ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ==================== 支付配置 (Stripe) ====================
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ==================== 监控配置 ====================
SENTRY_DSN=
LOG_LEVEL=INFO

# ==================== 限流配置 ====================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==================== 文件上传配置 ====================
MAX_FILE_SIZE=20971520
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# ==================== CORS 配置 ====================
# 多个域名用逗号分隔
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com

# ==================== CDN 配置 ====================
CDN_URL=https://cdn.globalpic.ai

# ==================== 外部 API 配置 ====================
OCR_API_URL=
OCR_API_KEY=

# ==================== 开发配置 ====================
HOT_RELOAD=True
AUTO_RELOAD=True
DEV_MODE=True
